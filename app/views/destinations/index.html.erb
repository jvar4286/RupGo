<p id="notice"><%= notice %></p>

<h1>Destinations</h1>

<table>
  <thead>
    <tr>
      <th>Place</th>
      <th>Why go</th>
      <th>To do</th>
      <th>Sights</th>
      <th>Festivals</th>
      <th>Sleep</th>
      <th>Eat</th>
      <th>Drink</th>
      <th>Shop</th>
      <th>Around</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @destinations.each do |destination| %>
      <tr>
        <td><%= link_to destination.place, destination %></td>
        <td><%= destination.why_go %></td>
        <td><%= destination.to_do %></td>
        <td><%= destination.sights %></td>
        <td><%= destination.festivals %></td>
        <td><%= destination.sleep %></td>
        <td><%= destination.eat %></td>
        <td><%= destination.drink %></td>
        <td><%= destination.shop %></td>
        <td><%= destination.around %></td>
        <td><%= link_to 'Show', destination %></td>
        <td><%= link_to 'Edit', edit_destination_path(destination) %></td>
        <td><%= link_to 'Destroy', destination, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Destination', new_destination_path %>
